{
  "name": "vscode-github-issues-sync",
  "displayName": "GitHub Issues Sync",
  "description": "Sync GitHub issues to local Markdown files for AI code agent reference",
  "version": "0.1.0",
  "publisher": "hiroyannnn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hiroyannnn/vscode-github-issues-sync/issues"
  },
  "homepage": "https://github.com/hiroyannnn/vscode-github-issues-sync",
  "keywords": [
    "github",
    "issues",
    "sync",
    "markdown",
    "local"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hiroyannnn/vscode-github-issues-sync"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:.git",
    "onView:githubIssuesView",
    "onCommand:githubIssuesSync.syncNow",
    "onCommand:githubIssuesSync.configure"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "githubIssuesSync.syncNow",
        "title": "GitHub Issues: Sync Now"
      },
      {
        "command": "githubIssuesSync.configure",
        "title": "GitHub Issues: Configure"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "github-issues-sync",
          "title": "GitHub Issues",
          "icon": "$(github)"
        }
      ]
    },
    "views": {
      "github-issues-sync": [
        {
          "id": "githubIssuesView",
          "name": "Issues"
        }
      ]
    },
    "configuration": {
      "title": "GitHub Issues Sync",
      "properties": {
        "githubIssuesSync.enableAutoSync": {
          "type": "boolean",
          "default": false,
          "description": "Enable automatic synchronization"
        },
        "githubIssuesSync.syncInterval": {
          "type": "number",
          "default": 15,
          "minimum": 5,
          "maximum": 1440,
          "description": "Synchronization interval in minutes"
        },
        "githubIssuesSync.maxIssues": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 1000,
          "description": "Maximum number of issues to sync"
        },
        "githubIssuesSync.syncPeriod": {
          "type": "string",
          "default": "6months",
          "enum": ["3months", "6months", "1year", "all"],
          "description": "Time period for issue synchronization"
        },
        "githubIssuesSync.includeClosedIssues": {
          "type": "boolean",
          "default": false,
          "description": "Include closed issues in synchronization"
        },
        "githubIssuesSync.syncStrategy": {
          "type": "string",
          "default": "incremental",
          "enum": ["full", "incremental", "lazy"],
          "enumDescriptions": [
            "Full sync every time",
            "Only sync changes since last sync",
            "Load details on demand"
          ],
          "description": "Synchronization strategy"
        },
        "githubIssuesSync.labelFilter": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Filter issues by labels (empty = all labels)"
        },
        "githubIssuesSync.milestoneFilter": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Filter issues by milestones (empty = all milestones)"
        },
        "githubIssuesSync.personalAccessToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token (fallback if VS Code authentication fails)"
        },
        "githubIssuesSync.storageDirectory": {
          "type": "string",
          "default": ".vscode/github-issues",
          "description": "Directory to store synced issues"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.11",
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "gray-matter": "^4.0.3"
  }
}
